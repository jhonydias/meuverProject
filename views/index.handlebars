<div class="jumbotron bg-success">
  <h1 class="display-3 text-center text-light">Bem vindo ao MeuVer</h1>
  <p class="text-center mt-5 mb-0">
    <a class="btn btn-warning btn-lg bg-warning" href="/usuario/registro" role="button">Crie sua conta</a>
  </p>
</div>

<div class="card-body bg-secondary rounded">
  <h1 class="display-4 text-white">Entre agora:</h1>
  <form class="container" action="/usuario/login" method="POST">
    <div class="form-group">
      <label for="email" class="text-white">Email</label>
      <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Digite seu email" required>
    </div>
    <div class="form-group">
      <label for="senha" class="text-white">Senha</label>
      <input type="password" class="form-control" id="senha" name="senha" placeholder="Digite sua senha" required>
    </div>
    
    <button type="submit" class="btn btn-success">Login</button>
  </form>
</div>