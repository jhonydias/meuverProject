<h2>Lista de Postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success mb-4">Criar nova Postagem</button></a>
{{#each postagens}}
        <div class="card">
            <div class="card-body">
                <input type="hidden" name="{{_id}}">
                <h4>{{titulo}}</h4>
                <p>{{descricao}}</p>
                <small>Data: {{date}}</small>
                <small>Categoria: {{categoria.nome}}</small>
                <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success">Editar post</button></a>
                <form action="/postagens/deletar" method="POST">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger mt-1">Apagar</button>
                </form>
            </div>
        </div>
{{else}}
<h3 class="mt-4">Ainda não há postagens registradas</h3>
{{/each}}